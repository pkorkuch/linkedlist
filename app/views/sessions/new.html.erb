<% provide(:title, 'Log In') %>
<div class='max-w-md mx-auto'>
  <h2 class='text-2xl'>Log In</h1>
  <%= form_with url: login_path, scope: :session, class: 'flex flex-col' do |f| %>
    <%= f.label :email, class: 'mt-2' %>
    <%= f.email_field :email, class: 'bg-transparent px-3 pt-2 pb-1.5 border-2 border-white', required: true %>
    <%= f.label :password, class: 'mt-4' %>
    <%= f.password_field :password, class: 'bg-transparent px-3 pt-2 pb-1.5 border-2 border-white' , required: true, minLength: 8 %>
    <%= f.submit 'Log in', class: 'self-end rounded-md mt-4 px-3 pt-2 pb-1.5 cursor-pointer border-2 border-white hover:text-black hover:bg-white focus:text-black focus:bg-white' %>
  <% end %>
  <p class='mt-2 text-right'>Or <%= link_to 'create an account', signup_path %></p>
</div>
